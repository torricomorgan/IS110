#include "stdafx.h"
void LITERAL (int D, int M, int A);

void main()
{int D,M,A;
 printf ("Insertar Fecha (dd/mm/aaaa): ");
 scanf ("%d%d%d",&D,&M,&A);
 if (M>12 || M<=0){printf ("Inserte un mes valido: "); scanf ("%d", &M);LITERAL(D,M,A);}
 else {
LITERAL(D,M,A);}
 printf ("\n");
}

void LITERAL (int D, int M, int A)
{
	switch (M)
	{ 
	case 1: printf ("\nLa fecha es: %d de Enero de %d\n", D, A);break;
	case 2: printf ("\nLa fecha es: %d de Febrero de %d\n", D, A);break;
	case 3: printf ("\nLa fecha es: %d de Marzo de %d\n", D, A);break;
	case 4: printf ("\nLa fecha es: %d de Abril de %d\n", D, A);break;
	case 5: printf ("\nLa fecha es: %d de Mayo de %d\n", D, A);break;
	case 6: printf ("\nLa fecha es: %d de Junio de %d\n", D, A);break;
	case 7: printf ("\nLa fecha es: %d de Julio de %d\n", D, A);break;
	case 8: printf ("\nLa fecha es: %d de Agosto de %d\n", D, A);break;
	case 9: printf ("\nLa fecha es: %d de Septiembre de %d\n", D, A);break;
	case 10: printf ("\nLa fecha es: %d de Octubre de %d\n", D, A);break;
	case 11: printf ("\nLa fecha es: %d de Noviembre de %d\n", D, A);break;
	case 12: printf ("\nLa fecha es: %d de Diciembre de %d\n", D, A);break;

	}// fin switch
}
