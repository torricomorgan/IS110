#include "stdafx.h"
#define NMAX 100
void cargarvector(int*V, int N);
void mostrarvector (int*V, int N);
void unidor (int*A, int*B, int*C, int N, int M);

void main()
{int N, M, A[NMAX], B[NMAX], C[NMAX];
 printf("Ingrese el tama√±o del vector A y B: ");	
 scanf ("%d%d", &N, &M);
 cargarvector(A,N);
 cargarvector(B,M);
 printf("\n");
 unidor(A,B,C,N,M);
 mostrarvector (C,N+M);
 }

void cargarvector(int*V, int N)
{int i=0;
 for (i=0; i<N; i++)
 {printf ("Vector N%d: ", i+1); 
  scanf ("%d", &V[i]);}
}

void mostrarvector (int*V, int N)
{int i=0;
	for (i=0; i<N; i++)
	{printf ("Vector N%d: %d\n", i+1, V[i]);}
}

void unidor (int*A, int*B, int*C, int N, int M)
{int aux=N+M;
 for (int i=0; i<N; i++)
	 {C[i]=A[i];}
 for (int j=0; j<M;j++)
 {C[j+N]=B[j];}
}
